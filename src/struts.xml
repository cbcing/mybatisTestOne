<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="default" extends="struts-default" namespace="/">
        <action name="queryCustomers" class="com.scujcc.struts.actions.CustomerAction">
            <result name="success">customers.jsp</result>
        </action>
        <action name="queryOrders" class="com.scujcc.struts.actions.OrderAction">
            <result name="success">orders.jsp</result>
        </action>
        <action name="queryCustomersById" class="com.scujcc.struts.actions.CustomerAction" method="queryCustomerById">
            <result name="success">customers.jsp</result>
        </action>
    </package>
</struts>